<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DartGUI.MainPage"
             x:Name="ContentPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="100,0"
            VerticalOptions="Center">
            <Label
                FontSize="30"
                HorizontalTextAlignment="Center"
                Text="Number of players (max 5):"
                VerticalTextAlignment="Center"
                WidthRequest="250" 
                x:Name="Label"/>
            <Entry
                ClearButtonVisibility="WhileEditing"
                FontSize="25"
                WidthRequest="300"
                Completed="Entry_OnCompleted"
                x:Name="Entry"></Entry>
            <Button
                FontSize="30"
                Margin="0,25,0,0"
                Clicked="Button_OnClicked"
                WidthRequest="200"
                Text="Apply"
                x:Name="Button"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
